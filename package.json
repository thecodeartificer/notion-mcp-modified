    "@modelcontextprotocol/sdk": "^1.7.0",
    "@notionhq/client": "^2.3.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "shx": "^0.3.4",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
